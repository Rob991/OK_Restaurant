<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ok_restaurant">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icona"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icona"
        android:supportsRtl="true"
        android:theme="@style/Theme.OK_Restaurant">
        <activity android:name="view.UpdateActivity"></activity>
        <activity android:name="view.ListActivity" />
        <activity android:name="view.AddPrenotazioneActivity" />
        <activity android:name="view.IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.MainActivity" />
    </application>

</manifest>